extends layout

block content
  h4 App Home Page

  if user
    p Logged in as 
     ul
       li Email: #{user.email}
       li Created: #{user.createdAt}
    a(href='/user/logout') Log Out
  if !user  
    p Not Logged In
    a(href='/users/login') Log In
  p 
    a(href='/users/') User Page (logged in only)  
